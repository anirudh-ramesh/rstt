<?xml version="1.0"?>
<block>
  <name>ErrorCorrection</name>
  <key>rstt_error_correction</key>
  <category>RSTT</category>
  <import>import rstt</import>
  <make>rstt.error_correction()</make>
  <param>
    <name>Drop invalid frames</name>
    <key>drop_invalid</key>
    <value>True</value>
    <type>bool</type>
  </param>
  <sink>
    <name>in</name>
    <type>short</type>
    <vlen>240</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>short</type>
    <vlen>240</vlen>
  </source>
  <doc>
    Try correct errors in packet using Reed-Solomon codes.
  </doc>
</block>
