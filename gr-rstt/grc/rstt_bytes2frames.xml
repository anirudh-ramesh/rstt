<?xml version="1.0"?>
<block>
    <name>Bytes2frames</name>
	<key>rstt_bytes2frames</key>
    <category>RSTT</category>
	<import>import rstt</import>
    <make>rstt.bytes2frames($threshold)</make>
    <param>
        <name>Threshold</name>
        <key>threshold</key>
        <value>0.3</value>
        <type>float</type>
    </param>
    <check>$threshold &gt;= 0. and $threshold &lt;= 1.</check>
	<sink>
		<name>in</name>
		<type>short</type>
	</sink>
	<source>
		<name>out</name>
        <type>short</type>
        <vlen>240</vlen>
    </source>
    <doc>
        Threshold - <0. - 1.>, output only packets with at least 'threshold' %
        correlation bytes. Drop all toher (badly broken packets).
    </doc>
</block>
